    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/navigation_color">

        <ImageView
            android:id="@+id/back_web"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/back_bt"
            android:src="@mipmap/back_arrow3" />

        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/control_terms_of_use"
            android:textColor="@color/white"
            android:textSize="19.2sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/share"
            android:text="保存"
            android:textColor="#3793ff"
            android:textSize="15.4sp"
            android:visibility="gone" />
    </RelativeLayout>

