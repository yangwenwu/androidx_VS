<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="1dp">
    <!-- android:elevation="5dp" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <!--  android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" -->
        <RelativeLayout
            android:id="@+id/rl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- android:layout_height="@dimen/news_img_height" -->
            <ImageView
                android:id="@+id/news_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@mipmap/news_big_default" />
            <!--android:layout_height="match_parent" android:scaleType="fitXY" android:scaleType="centerInside"-->

        </RelativeLayout>

        <TextView
            android:id="@+id/news_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/news_tag_bg"
            android:gravity="center"
            android:text="LIFE ART"
            android:textColor="#ffffff"
            android:textSize="11.5sp"
            tools:text="LIFE &amp; ART" />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="19dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#262b2e"
            android:textSize="13.9sp"
            tools:text="OAS nations make last-ditch effort to condemn Venezuela" />

        <TextView
            android:id="@+id/news_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:lineSpacingMultiplier="1.1"
            android:textColor="#b3262b2e"
            android:textSize="11sp"
            tools:text="Hong Kong slips behind New York and mainland A-share exchanges during the first half of the year." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1"
                android:textColor="#038dff"
                android:textSize="9sp"
                tools:text="27 JUNE, 2017" />

            <TextView
                android:id="@+id/news_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:lineSpacingMultiplier="1.62"
                android:text="120 likes"
                android:textColor="#262b2e"
                android:textSize="10.1sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>