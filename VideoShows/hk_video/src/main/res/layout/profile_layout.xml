<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#171616">
        <!--android:background="@mipmap/top_title_bg" @drawable/statubar_shape -->
        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:letterSpacing="0.01"
            android:text="Profile"
            android:textColor="#ffffff"
            android:textSize="21.1sp" />
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/back_bt"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/back_arrow3"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="9.6sp"
            android:textColor="#777777"
            android:letterSpacing="0.1"
            android:text="NAME"/>

        <ImageView
            android:id="@+id/nick_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right"/>

        <TextView
            android:id="@+id/profile_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@id/nick_right_arrow"
            android:hint=""
            android:layout_marginRight="10dp"
            android:textSize="15.4sp"
            android:textColor="#2e332f"
            />
        <!-- android:layout_marginRight="30dp" -->
        <!--android:textColor="#3793ff"  android:layout_toLeftOf="@id/nick_right_arrow" -->
    </RelativeLayout>

    <TextView
        android:id="@+id/gap_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13.6dp"
        android:layout_marginRight="13.6dp"
        android:background="#e7e7e7"/>

    <RelativeLayout
        android:id="@+id/profile_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="9.6sp"
            android:textColor="#777777"
            android:letterSpacing="0.1"
            android:text="CHANGE PASSWORD"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/gap_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13.6dp"
        android:layout_marginRight="13.6dp"
        android:background="#e7e7e7"/>
</LinearLayout>